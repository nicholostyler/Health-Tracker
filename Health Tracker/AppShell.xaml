<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="Health_Tracker.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:Health_Tracker"
    xmlns:android="clr-namespace:Microsoft.Maui.Controls.PlatformConfiguration.AndroidSpecific;assembly=Microsoft.Maui.Controls"
    android:TabbedPage.ToolbarPlacement="Bottom"
    Shell.NavBarHasShadow="true"
    FlyoutBackgroundColor="{DynamicResource Background}"
    FlyoutWidth="68"
    FlyoutBehavior="{OnIdiom Phone=Disabled, Default=Locked}"
    >
    <!-- Desktop / Tablet-->
    <FlyoutItem Icon="grid.png">
        <ShellContent ContentTemplate="{DataTemplate local:MainPage}"/>

    </FlyoutItem>
    <FlyoutItem Icon="grid.png">
        <ShellContent ContentTemplate="{DataTemplate local:Logbook}"/>

    </FlyoutItem>

    <TabBar x:Name="PhoneTabs">
        <Tab>
            <ShellContent Title="Home" Icon="grid.svg" ContentTemplate="{DataTemplate local:MainPage}"/>
            <ShellContent Title="Logbook" Icon="grid.svg" ContentTemplate="{DataTemplate local:Logbook}"/>
        </Tab>
    </TabBar>

        

</Shell>
